{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "enabled": false,
            "matchDepNames": [
                "python"
            ],
            "matchManagers": [
                "gitlabci"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ]
        },
        {
            "matchDepNames": [
                "python"
            ],
            "matchManagers": [
                "gitlabci"
            ],
            "separateMinorPatch": true
        }
    ]
}
